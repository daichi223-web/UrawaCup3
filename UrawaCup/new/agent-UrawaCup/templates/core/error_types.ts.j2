// 統一エラー型定義

export type ErrorCode =
{% for code in error_codes %}
  | '{{ code }}'
{% endfor %};

export interface AppError {
  code: ErrorCode;
  message: string;
  status: number;
  details?: Record<string, unknown>;
  retryable: boolean;
}

export function isAppError(error: unknown): error is AppError {
  return (
    typeof error === 'object' &&
    error !== null &&
    'code' in error &&
    'message' in error &&
    'status' in error &&
    'retryable' in error
  );
}

